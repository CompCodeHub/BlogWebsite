<%- include("partials/header"); -%>

    <h1>Compose</h1>

    <form action="/compose" method="post">
        <label for="blogTitle" class="form-label">Title</label>
        <input type="text" name="postTitle" id="blogTitle" class="form-control">
        <label for="blogPost" class="form-label">Post</label>
        <textarea name = "postBody" rows="5" cols="30" id="blogPost" class="form-control"></textarea>
        <br>
        <button class="btn btn-primary" type="submit" name="button">Publish</button>
    </form>


    <%- include("partials/footer"); -%>